<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/file_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:src="@drawable/file_type_mp3" />
    
    <LinearLayout android:layout_width="wrap_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:gravity="left"
    android:layout_weight="4"
    android:orientation="vertical">
        <TextView android:id="@+id/file_item_filename"
            android:text="filename"
            android:textColor="@color/text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView android:id="@+id/file_item_filetype"
            android:text="filetype"
            android:textColor="@color/text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    
    <LinearLayout android:layout_width="wrap_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_weight="4"
    android:gravity="left"
    android:orientation="vertical">
        <TextView android:id="@+id/file_item_filesize"
            android:text="filesize"
            android:textColor="@color/text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView android:id="@+id/file_item_filedate"
            android:text="filedate"
            android:textColor="@color/text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>